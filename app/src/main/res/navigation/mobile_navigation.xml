<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movies">

    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.ch.movie.ui.movieList.MovieListFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_movie_list" />



    <fragment
        android:id="@+id/navigation_tv_shows"
        android:name="com.ch.movie.ui.tvShowList.TvShowListFragment"
        android:label="TvShows"
        tools:layout="@layout/fragment_tv_show_list" />


    <fragment
        android:id="@+id/navigation_watch_later"
        android:name="com.ch.movie.ui.watchLater.WatchLaterListFragment"
        android:label="WatchLaterMovie"
        tools:layout="@layout/fragment_watch_later_list" />


    <fragment
        android:id="@+id/navigation_tv_show_detailed"
        android:name="com.ch.movie.ui.tvShowDetailedView.TvShowDetailedFragment"
        android:label="TvShowDetailed"
        tools:layout="@layout/fragment_tv_show_detailed" />

    <fragment
        android:id="@+id/navigation_movie_detailed"
        android:name="com.ch.movie.ui.movieDetailedView.MovieDetailedFragment"
        android:label="MovieDetailed"
        tools:layout="@layout/fragment_movie_detailed" />
</navigation>