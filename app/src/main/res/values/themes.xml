<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movielist" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <style name="Theme.Movielist.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MovieList.MovieDetail" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="windowNoTitle">true</item>
        <item name="colorSecondary">@color/gold</item>
        <item name="colorAccent">@color/gold</item>
    </style>
    <style name="Theme.MovieList.RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/gold</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="Theme.Movielist.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>